<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/pia?useSSL=false</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password"></property>
    <mapping resource="pia/database/Spojnice.hbm.xml"/>
    <mapping resource="pia/database/Slagalica.hbm.xml"/>
    <mapping resource="pia/database/Korisnici.hbm.xml"/>
    <mapping resource="pia/database/IgraDana.hbm.xml"/>
    <mapping resource="pia/database/Rezultat.hbm.xml"/>
    <mapping resource="pia/database/Partija.hbm.xml"/>
    <mapping resource="pia/database/SpojniceRec.hbm.xml"/>
    <mapping resource="pia/database/AsocijacijaGrupa.hbm.xml"/>
    <mapping resource="pia/database/Asocijacija.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
